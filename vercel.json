{
    "version": 2,
    "builds": [
        {
            "src": "./api/app.py",
            "use": "@vercel/python",
            "config": { "runtime": "python3.9" }
        }
    ],
    "rewrites": [
        { "source": "/(.*)", "destination": "/api/app.py" }
    ],
    "functions": {
        "api": {
            "runtime": "vercel-python@3.9",
            "includeFiles": ["api/**"],
            "routes": [{ "src": "/.*", "dest": "api/app.py" }],
            "environment": {
                "PYPATH": ".",
                "PYTHONUSERBASE": ".python_packages"
            }
        }
    },
    "install": {
        "include": ["api/**"]
    }
}
